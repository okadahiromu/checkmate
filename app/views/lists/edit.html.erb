<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container text-center mt-5">
  <h1 class="mb-4">リストを編集</h1>

  <%= form_for(@list) do |f| %>
    <div class="mb-3">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control", placeholder: "リストの名前を入力してください" %>
    </div>

    <div class="mb-3">
      <%= f.label :description, class: "form-label" %>
      <%= f.text_area :description, class: "form-control", placeholder: "リストの説明を入力してください" %>
    </div>

    <div class="mb-3">
      <%= f.submit '更新', class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>

  <%= link_to '削除', list_path(@list), data: { turbo_method: :delete }, class: "btn btn-primary btn-lg" %>
  <%= link_to "ホーム", root_path, class: "btn btn-primary btn-lg" %>
</div>