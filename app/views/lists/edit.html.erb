<h1>リストを編集</h1>

<%= form_for(@list) do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.submit '更新', class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to '削除', list_path(@list), data: { turbo_method: :delete }, class: "btn btn-primary" %>

<%= link_to "ホーム", root_path, class: "btn btn-primary" %>
