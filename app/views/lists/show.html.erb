
<h1><%= @list.name %></h1>

<p><%= @list.description %></p>

  <%= link_to '新しいチェックを作成', new_list_item_path(@list), class: "btn btn-primary" %>
  <%= link_to 'リストを編集', edit_list_path(@list), class: "btn btn-primary" %>
<table>
  <thead>
    <tr class="ttt">
      <th>名前</th>
      <th></th>
      <th>チェック</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td>
          <%= form_for item, url: list_item_path(@list, item), method: :patch do |f| %>
            <%= f.check_box :checked, class: 'item-checkbox' %>
            <%= f.submit "更新", class: 'btn btn-primary' %>
          <% end %>
        </td>
        <td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "ホーム", root_path, class: "btn btn-primary" %>