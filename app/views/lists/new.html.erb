<h1>新しいリストを作成</h1>
<%= form_with(model: [@list], local: true) do |form| %>
<%= render 'shared/error_messages', model: form.object %>
  <div>
    <%= form.label "名前" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label "説明" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.submit '作成', class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "ホーム", root_path, class: "btn btn-primary" %>