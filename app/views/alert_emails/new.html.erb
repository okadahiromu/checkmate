<div class="container text-center">
<h1>メール作成</h1>
<%= form_with(model: @alert_email, url: alert_emails_path, local: true) do |form| %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div class="actions">
    <%= form.submit "作成" %>
  </div>
  
  <%= link_to "一覧", alert_emails_path, class: "btn btn-primary" %>
  <%= link_to "ホーム", root_path, class: "btn btn-primary" %>
</div>
<% end %>