<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<div class="container text-center">
  <h1 class="mb-4">メール作成</h1>

  <%= form_with(model: @alert_email, url: alert_emails_path, local: true) do |form| %>

    <div class="form-group">
      <%= form.label :title, class: "font-weight-bold" %>
      <%= form.text_field :title, class: "form-control", placeholder: "メールのタイトルを入力してください" %>
    </div>

    <div class="form-group">
      <%= form.label :body, class: "font-weight-bold" %>
      <%= form.text_area :body, class: "form-control", placeholder: "メールの本文を入力してください" %>
    </div>

    <div class="form-group">
      <%= form.label :recipient_id, class: "font-weight-bold" %>
      <%= form.select :recipient_id, User.all.map { |user| [user.email, user.id] }, { prompt: '受信者を選択してください' }, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :sender_id, class: "font-weight-bold" %>
      <%= form.hidden_field :sender_id, value: current_user.id %>
    </div>

    <div class="form-group mt-4" id="submit-container">
      <%= form.submit "作成", class: "btn btn-primary btn-lg", id: "submit-btn" %>
    </div>

  <% end %>
</div>

