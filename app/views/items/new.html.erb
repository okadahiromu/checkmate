<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container text-center mt-5">
  <h1 class="mb-4">新しいチェック項目を作成</h1>

  <%= form_with(model: [@list, @item], local: true) do |form| %>
    <%= render 'shared/error_messages', model: form.object %>

    <div class="mb-3">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-control", placeholder: "チェック項目の名前を入力してください" %>
    </div>

    <div class="mb-3">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, class: "form-control", placeholder: "チェック項目の説明を入力してください" %>
    </div>

    <div class="mb-3">
      <%= form.submit '作成', class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>

  <%= link_to "ホーム", root_path, class: "btn btn-primary btn-lg" %>
</div>

